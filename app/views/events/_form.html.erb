<div class="new-event">  
  <h2>Add Event</h2>

  <%= form_for @event do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <br>
    <div class="field">
      <%= f.label :date %><br>
      <%= f.select_date(:date, :order => [:month, :day, :year], :placeholder => 'mm/dd/yyyy')%>
    </div>
    <br>
    <div class="field">
      <%= f.label :time %><br>
      <%= f.time_field :time %>
    </div>
    <br>
    <div class="field">
      <%= f.label :location %><br>
      <%= f.text_field :location %>
    </div>
    <br>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_field :description, class: "description" %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>